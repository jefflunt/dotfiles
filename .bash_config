if [ -f ~/.git/completion.bash ]; then
  . ~/.git/completion.bash
fi

export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad

set -o vi

alias x='exit'
alias v='vim'
alias r='ruby'
alias la='ls -al'
alias c='cat'
alias t='tree .'
alias t1='tree . -L 1'
alias t2='tree . -L 2'
alias t3='tree . -L 3'
alias br='. ~/.bash_profile'

alias go='git clone'
alias gst='git status'
alias ga='git add'
alias gaa='git add -A'
alias gc='git commit'
alias gcm='git commit -m'
alias gam='git commit --amend'
alias gd='git diff'
alias gdc='git diff --cached'
alias gk='gitk'
alias gch='git checkout'
alias gb='git branch'
alias gp='git push'
alias gpsu='git push --set-upstream origin $(git branch | grep "*" | tr -d "* ")'
alias gl='git log'
alias glo='git log --oneline'
alias gt='git tag'
function gbpurge() {
  git branch -d $1;
  git branch -dr origin/$1
  git push origin --delete $1
}
